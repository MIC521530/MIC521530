// src/App.jsx
import React, { useEffect, useState } from 'react';
import axios from 'axios';

const coins = [
  'bitcoin',
  'ethereum',
  'binancecoin',
  'ripple',
  'litecoin',
  'tether',
  'cardano',
  'solana',
  'dogecoin',
  'polkadot'
];
const coinMap = {
  bitcoin: 'BTC',
  ethereum: 'ETH',
  binancecoin: 'BNB',
  ripple: 'XRP',
  litecoin: 'LTC',
  tether: 'USDT',
  cardano: 'ADA',
  solana: 'SOL',
  dogecoin: 'DOGE',
  polkadot: 'DOT'
};

function App() {
  const [prices, setPrices] = useState({});
  const [walletAddress, setWalletAddress] = useState('');

  useEffect(() => {
    async function fetchPrices() {
      try {
        const res = await axios.get(
          `https://api.coingecko.com/api/v3/simple/price?ids=${coins.join(',')}&vs_currencies=twd`
        );
        setPrices(res.data);
      } catch (err) {
        console.error('å–å¾—å¹£åƒ¹éŒ¯èª¤ï¼š', err);
      }
    }
    fetchPrices();
  }, []);

  async function connectWallet() {
    if (typeof window.ethereum !== 'undefined') {
      try {
        const accounts = await window.ethereum.request({ method: 'eth_requestAccounts' });
        setWalletAddress(accounts[0]);
      } catch (error) {
        console.error('éŒ¢åŒ…é€£æ¥å¤±æ•—ï¼š', error);
      }
    } else {
      alert('è«‹å®‰è£ MetaMask éŒ¢åŒ…æ“´å……åŠŸèƒ½');
    }
  }

  return (
    <div className="min-h-screen bg-[#0f1115] text-gray-200 font-sans">
      <header className="flex justify-between items-center p-6 border-b border-gray-700">
        <div className="flex items-center text-xl font-bold">
          <img src="/logo.png" alt="MCI Logo" className="h-10 mr-3" /> M.C.I
        </div>
        <nav className="space-x-4">
          <a href="#" className="hover:underline">é¦–é </a>
          <a href="#market" className="hover:underline">å¹£ç¨®äº¤æ˜“</a>
          <a href="#admin" className="hover:underline">å¾Œå°æ¨¡æ“¬</a>
          <a href="#login" className="hover:underline">ç™»å…¥</a>
        </nav>
      </header>

      <section className="text-center py-16 bg-gradient-to-br from-gray-900 to-black">
        <h1 className="text-4xl font-bold mb-4">ç¾ä»£åŠ å¯†å¹£æ‰€ M.C.I</h1>
        <p className="text-gray-400">å®‰å…¨ï¼åˆè¦ï¼å€¼å¾—ä¿¡è³´çš„è™›æ“¬è²¨å¹£äº¤æ˜“å¹³å°</p>
      </section>

      <section className="text-center py-6">
        <button
          onClick={connectWallet}
          className="px-6 py-2 bg-white/10 border border-white/20 backdrop-blur rounded-xl hover:bg-white/20"
        >
          ğŸ”— é€£æ¥éŒ¢åŒ…
        </button>
        {walletAddress && <div className="mt-2 text-sm">å·²é€£æ¥éŒ¢åŒ…ï¼š{walletAddress}</div>}
      </section>

      <section id="market" className="px-4 py-10">
        <div className="overflow-x-auto">
          <table className="min-w-full border border-white/10 bg-white/5 backdrop-blur rounded-xl">
            <thead>
              <tr className="bg-white/10">
                <th className="py-3 px-4">å¹£ç¨®</th>
                <th className="py-3 px-4">ä»£ç¢¼</th>
                <th className="py-3 px-4">å¸‚å ´åƒ¹æ ¼ (TWD)</th>
                <th className="py-3 px-4">æ“ä½œ</th>
              </tr>
            </thead>
            <tbody>
              {coins.map(id => (
                <tr key={id} className="text-center border-t border-white/10">
                  <td className="py-3 px-4">{id.charAt(0).toUpperCase() + id.slice(1)}</td>
                  <td className="py-3 px-4">{coinMap[id]}</td>
                  <td className="py-3 px-4">
                    {prices[id]?.twd ? `NT$${prices[id].twd.toLocaleString()}` : '--'}
                  </td>
                  <td className="py-3 px-4">
                    <button className="px-3 py-1 bg-green-500/20 hover:bg-green-500/40 rounded">è²·å…¥</button>
                    <button className="px-3 py-1 ml-2 bg-red-500/20 hover:bg-red-500/40 rounded">è³£å‡º</button>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </section>

      <footer className="text-center text-sm text-gray-500 py-6 border-t border-white/10">
        &copy; 2025 ç¾ä»£åŠ å¯†å¹£æ‰€ Modern Cryptocurrency Institute (M.C.I). All rights reserved.
      </footer>
    </div>
  );
}

export default App;
